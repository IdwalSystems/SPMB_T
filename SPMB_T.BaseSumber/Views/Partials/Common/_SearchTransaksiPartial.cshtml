@{
    string date1 = ViewBag.searchDate1 ?? DateTime.Now.AddDays(-14).ToString("yyyy-MM-dd");
    string date2 = ViewBag.searchDate2 ?? DateTime.Now.ToString("yyyy-MM-dd");
}
<div class="card mb-2">
    <div class="card-body ps-3 pb-2 ">
        <label class="form-control-plaintext" for="searchselect">Carian : </label>

        <div class="form-actions no-color mb-2">
            <form asp-action="Index" method="get">
                <div class="row g-3">
                    <div class="col-sm-9 mb-2">
                        <div class="row g-3">
                            <div class="col-4">
                                <label class="form-label">Nama / No Rujukan</label>
                            </div>
                            <div class="col-6">
                                <input class="form-control form-control-sm" type="text" name="searchString" value="@ViewBag.searchString" />
                            </div>
                            <div class="col-2">
                                <button type="submit" class="btn text-info btn-sm" data-toggle="tooltip" data-placement="top" title="Cari"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                        <div class="row g-3">
                            <div class="col-4">
                                <label class="form-label">Tarikh</label>
                            </div>
                            <div class="col-6">
                                <div class="row g-3">
                                    <div class="col-6">
                                        <input class="form-control form-control-sm mb-2" type="date" name="searchDate1" value="@date1" required />
                                    </div>
                                    <div class="col-6">
                                        <input class="form-control form-control-sm" type="date" name="searchDate2" value="@date2" required />
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
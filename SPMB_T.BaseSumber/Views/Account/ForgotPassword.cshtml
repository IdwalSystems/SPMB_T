@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Log in - Lupa Katalaluan";
    Layout = "~/Views/Shared/Account/_LoginLayout.cshtml";
}
<div class="login-wrapper">
    <form class="form fade-in" asp-controller="Account" asp-action="ForgotPassword" method="post" role="form">
        <img src="~/img/MainLogo_Syarikat.webp" alt="IMG" />
        <h2>SPMB</h2>
        <hr />
        <h6>Lupa Katalaluan?</h6>
        <div asp-validation-summary="All" class="text-danger mb-3 ml-4"></div>
        <div class="input-group">
            <input type="text" asp-for="Emel" required placeholder="Sila Isi Emel Anda" />
            <span class="focus-input100"></span>
            <span class="symbol-input100">
                <i class="fa fa-envelope" aria-hidden="true"></i>
            </span>
        </div>
        <input type="submit" value="Login" class="submit-btn" />

    </form>
</div>

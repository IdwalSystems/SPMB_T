@model DPekerja

@{
    ViewData["Title"] = "Anggota - Papar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card box-shadow">
    <div class="card-body">
        <div class="row">
            <div class="col-8">
                <h5 class="text-uppercase text-dark mb-0">@ViewData["Title"]</h5>
                <span class="ac-ref"><a asp-action="Index" class="text-secondary">Indeks</a> / Papar</span>
            </div>
            <div class="col-4">
                <a asp-action="Index"
                   asp-route-searchString="@_http.HttpContext?.Session.GetString("searchString")"
                   class="text-secondary float-end"><i class="fas fa-times fa-2x"></i></a>
            </div>

        </div>
        <div class="row">
           <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="NoGaji" class="control-label"></label>
                    <input asp-for="NoGaji" class="form-control form-control-sm" required readonly />
                    <span asp-validation-for="NoGaji" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="NoKp" class="control-label"></label>
                    <input asp-for="NoKp" class="form-control form-control-sm text-uppercase" readonly />
                    <span asp-validation-for="NoKp" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Nama" class="control-label"></label>
                    <input asp-for="Nama" class="form-control form-control-sm text-uppercase" readonly />
                    <span asp-validation-for="Nama" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="JPTJId" class="control-label"></label>
            <input class="form-control form-control-sm text-uppercase" value="@Model.JPTJ?.Kod - @Model.JPTJ?.Perihal" readonly />
        </div>
        <div class="form-group">
            <label asp-for="JBahagianId" class="control-label"></label>
            <input class="form-control form-control-sm text-uppercase" value="@Model.JBahagian?.Kod - @Model.JBahagian?.Perihal" readonly />
        </div>
        <div class="form-group">
            <label asp-for="JCawanganId" class="control-label"></label>
            <input class="form-control form-control-sm text-uppercase" value="@Model.JCawangan?.Kod - @Model.JCawangan?.Perihal" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Alamat1" class="control-label"></label>
            <input asp-for="Alamat1" class="form-control form-control-sm text-uppercase mb-2" readonly />
            <input asp-for="Alamat2" class="form-control form-control-sm text-uppercase mb-2" readonly />
            <input asp-for="Alamat3" class="form-control form-control-sm text-uppercase" readonly />
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Poskod" class="control-label"></label>
                    <input asp-for="Poskod" class="form-control form-control-sm" readonly />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Bandar" class="control-label"></label>
                    <input asp-for="Bandar" class="form-control form-control-sm text-uppercase" readonly />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="JNegeriId" class="control-label"></label>
                    <input class="form-control form-control-sm text-uppercase" value="@Model.JNegeri?.Kod - @Model.JNegeri?.Perihal" readonly />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="JBankId" class="control-label"></label>
                    <input class="form-control form-control-sm text-uppercase" value="@Model.JBank?.Kod - @Model.JBank?.Perihal" readonly />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="NoAkaunBank" class="control-label"></label>
                    <input asp-for="NoAkaunBank" class="form-control form-control-sm" readonly />
                    <span asp-validation-for="NoAkaunBank" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="TelefonBimbit" class="control-label"></label>
                    <input asp-for="TelefonBimbit" class="form-control form-control-sm" readonly />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="TelefonRumah" class="control-label"></label>
                    <input asp-for="TelefonRumah" class="form-control form-control-sm" readonly />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Emel" class="control-label"></label>
                    <input asp-for="Emel" class="form-control form-control-sm text-uppercase" type="email" readonly />
                </div>
            </div>
        </div>
        <hr />

        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn ac-primary btn-sm">Ubah</a>
            <a asp-action="Index"
               asp-route-searchString="@_http.HttpContext?.Session.GetString("searchString")"
               class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
        </div>

    </div>
</div>

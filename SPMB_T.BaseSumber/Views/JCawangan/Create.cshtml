@model JCawangan

@{
    ViewData["Title"] = "Cawangan - Tambah";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card box-shadow">
    <div class="card-body">
        <partial name="~/Views/Partials/Common/_TitleCreatePartial.cshtml" />
        
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="syscode" value="SPSU" hidden />
            <div class="form-group">
                <label asp-for="Kod" class="control-label"></label>
                <input asp-for="Kod" class="form-control form-control-sm" maxlength="2" onkeypress="return (event.charCode !=8 && event.charCode ==0 || (event.charCode >= 48 && event.charCode <= 57))" required />
                <span asp-validation-for="Kod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Perihal" class="control-label"></label>
                <input asp-for="Perihal" class="form-control form-control-sm text-uppercase" />
                <span asp-validation-for="Perihal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AkBankId" class="control-label"></label>
                <select asp-for="AkBankId" class="form-control form-control-sm text-uppercase" >
                    <option value="0">-- SILA PILIH --</option>
                    @foreach (var item in ViewBag.AkBank)
                    {
                        <option value="@item.Id">@item.Perihal - @item.NoAkaun</option>
                    }
                </select>
            </div>

            <hr />
            <div class="form-group">
                <input type="submit" value="Simpan" class="btn ac-primary btn-sm" />
                <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
